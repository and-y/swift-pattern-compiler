{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "declaration": true
    },
    "files": [
        "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}